<!DOCTYPE html>

<head>
    <!-- Latest compiled and minified CSS -->
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.6/css/bootstrap.min.css" integrity="sha384-1q8mTJOASx8j1Au+a5WDVnPi2lkFfwwEAa8hDDdjZlpLegxhjVME1fgjWPGmkzs7" crossorigin="anonymous">
    
    <!-- Optional theme -->
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.6/css/bootstrap-theme.min.css" integrity="sha384-fLW2N01lMqjakBkx3l/M9EahuwpSfeNvV63J5ezn3uZzapT0u7EYsXMjQV+0En5r" crossorigin="anonymous">
    
    <!-- Latest compiled and minified JavaScript -->
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.6/js/bootstrap.min.js" integrity="sha384-0mSbJDEHialfmuBBQP6A4Qrprq5OVfW37PRR3j5ELqxss1yVqOtnepnHVP9aJ7xS" crossorigin="anonymous"></script>
        
    <!-- Font-awesome icons to get access to the githib icon -->
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/font-awesome/4.5.0/css/font-awesome.min.css">
    
    <!-- custom CSS -->
    <link rel="stylesheet" href="create.css">
    
    <!-- JQuery -->
    <script src="https://code.jquery.com/jquery-2.2.3.min.js" integrity="sha256-a23g1Nt4dtEYOj7bR+vTu7+T8VP13humZFBJNIYoEJo=" crossorigin="anonymous"></script>

    <!-- create.js custom JS -->
    <script src="./create.js"></script>
</head>

<body>
  <nav class="navbar navbar-default">
    <div class="container-fluid">
      <!-- Brand and toggle get grouped for better mobile display -->
      <div class="navbar-header">
        <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1" aria-expanded="false">
          <span class="sr-only">Toggle navigation</span>
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
        </button>
      </div>
  
      <!-- Collect the nav links, forms, and other content for toggling -->
      <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
        <ul class="nav navbar-nav">
          <li><button onclick="window.location.href='/home/create'" type="button" class="btn btn-primary navbar-btn">Create</button></li>
          <li><button onclick="window.location.href='/home'" type="button" class="btn btn-primary navbar-btn">Home</button></li>
        </ul>
        <ul class="nav navbar-nav navbar-right">
          <li class="navbar-brand">
            <%= username %>
          </li>
        </ul>
      </div><!-- /.navbar-collapse -->
    </div><!-- /.container-fluid -->
  </nav>  
    
  <div class="container-fluid">
    <div class="poll-title text-center">
      <h1 id="pollTitle">New Poll</h1>
    </div>
    
    <div class="form-holder">
      <form class="form-horizontal">
        <div class="form-group">
          <div class="col-sm-2"></div>
          <label for="a" class="col-sm-2 control-label">Poll Name: </label>
          <div class="col-sm-6">
          <input type="text" oninput="updatePollName(this.value)" class="form-control" id="pollName" placeholder="My Poll">
          </div>
          <div class="col-sm-2"></div>
        </div>
        <div class="form-group option1-form">
          <div class="col-sm-2"></div>
          <label for="option1" class="col-sm-2 control-label">Option 1: </label>
          <div class="col-sm-6">
            <input type="text" oninput="checkNumOptions(this)" class="form-control option-label" id="option1">
          </div>
          <div class="col-sm-2"></div>
          <div class="col-sm-2"></div>
        </div>
        <div class="form-group option2-form">
          <div class="col-sm-2"></div>
          <label for="option2" class="col-sm-2 control-label">Option 2: </label>
          <div class="col-sm-6">
            <input type="text" oninput="checkNumOptions(this)" class="form-control option-label" id="option2">
          </div>
          <div class="col-sm-2"></div>
          <div class="col-sm-2"></div>
        </div>
        <div class="form-group">
          <div class="col-sm-2"></div>
          <div class="col-sm-offset-2 col-sm-8">



            <button id="submit-button" type="button" class="btn btn-default" onclick="submitPoll()">Save poll</button>

          </div>
          <div class="col-sm-2"></div>
        </div>
      </form>
    </div>
  </div>

</body>